<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#aa00ffd0">

    <ImageView
        android:id="@+id/imgLocation"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:src="@drawable/img_splash" />

    <TextView
        android:id="@+id/tvMarkerTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/imgLocation"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvMarkerLongLat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lat_long"
        android:layout_alignStart="@+id/tvMarkerTitle"
        android:layout_below="@+id/tvMarkerTitle"/>

    <TextView
        android:id="@+id/tvRating"
        android:text="@string/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/tvMarkerTitle"
        android:layout_alignBottom="@+id/imgLocation"/>

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.1"
        android:theme="@style/my_ratingbar_style"
        style="@style/Base.Widget.AppCompat.RatingBar.Small"
        android:layout_toEndOf="@id/tvRating"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_alignBottom="@+id/imgLocation"/>

</RelativeLayout>